{
  "expo": {
    "name": "RemindMePlus",
    "slug": "RemindMePlus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow RemindMe+ to use your location to provide location-based reminders.",
          "locationAlwaysPermission": "Allow RemindMe+ to use your location in the background to provide location-based reminders.",
          "locationWhenInUsePermission": "Allow RemindMe+ to use your location to provide location-based reminders."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1",
          "defaultChannel": "reminders"
        }
      ],
      "expo-background-fetch",
      "expo-task-manager"
    ]
  }
}
